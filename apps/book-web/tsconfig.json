{
  "extends": "@packages/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "typeRoots": [
      "node_modules/@types/",
      "./src/types/",
      "./node_modules/@packages/**/**/*.d.ts"
    ],
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/public/*": [
        "./public/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
