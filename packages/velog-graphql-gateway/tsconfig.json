{
  "compilerOptions": {
    "target": "ES2022",                                      
    "module": "ES2022",
    "lib": ["ES2022"], 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",                   
    "baseUrl": "./",                                                       
    "outDir": "./dist",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src", ".eslintrc.cjs"],
  "exclude": [],
  "ts-node": {
    "transpileOnly": true
  }
}
